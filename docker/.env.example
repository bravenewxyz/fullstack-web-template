############
# Secrets
# Generate these using the instructions below
############

# Database password - use a strong password
POSTGRES_PASSWORD=your-super-secret-postgres-password

# JWT Secret - generate with: openssl rand -base64 32
JWT_SECRET=your-super-secret-jwt-token-with-at-least-32-characters

# Anon Key - JWT with role: anon
# Generate using: node -e "const c=require('crypto');const s='YOUR_JWT_SECRET';const h={alg:'HS256',typ:'JWT'};const p={role:'anon',iss:'supabase',iat:Math.floor(Date.now()/1000),exp:Math.floor(Date.now()/1000)+315360000};const b64u=(x)=>Buffer.from(JSON.stringify(x)).toString('base64').replace(/=/g,'').replace(/\+/g,'-').replace(/\//g,'_');const d=b64u(h)+'.'+b64u(p);const sig=c.createHmac('sha256',s).update(d).digest('base64').replace(/=/g,'').replace(/\+/g,'-').replace(/\//g,'_');console.log(d+'.'+sig);"
ANON_KEY=your-generated-anon-key

# Service Role Key - JWT with role: service_role
# Generate using same method as above, but with {"role": "service_role", ...}
SERVICE_ROLE_KEY=your-generated-service-role-key

# IMPORTANT: After generating keys, copy them to docker/volumes/kong/kong.yml
# (Replace the placeholder values in the keyauth_credentials sections)

############
# URLs
############

# Where the Supabase API is accessible (Kong gateway)
API_EXTERNAL_URL=http://localhost:8000

# Your frontend app URL
SITE_URL=http://localhost:3000

############
# Auth Settings
############

# Auto-confirm email signups (set to true for local dev without SMTP)
ENABLE_EMAIL_AUTOCONFIRM=true

# Enable/disable signup
DISABLE_SIGNUP=false

# Enable anonymous users
ENABLE_ANONYMOUS_USERS=false

############
# Google OAuth (optional)
############

ENABLE_GOOGLE_OAUTH=false
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=

############
# SMTP (optional - for email confirmation)
############

SMTP_HOST=
SMTP_PORT=587
SMTP_USER=
SMTP_PASS=
SMTP_ADMIN_EMAIL=admin@localhost
